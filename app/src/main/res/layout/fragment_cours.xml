                    android:id="@+id/splash_imageview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/head_shape"
                    android:scaleType="centerCrop" />

